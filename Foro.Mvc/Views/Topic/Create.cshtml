@model Foro.Mvc.Models.Topics.TopicAddViewModel

@{
    ViewBag.Title = "Create";
}

<h2>New Topic</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div>
        <div>
            @Html.LabelFor(model => model.Title)
        </div>
        <div>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { style = "width: 100%;" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.Description)
        </div>
        <div>
            @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { style = "width: 100%;" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
        <div>
            <br />
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    <br />
    @Html.ActionLink("<< Back to Topics", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
